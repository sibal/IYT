<?xml version="1.0" encoding="UTF-8"?>
<project name="IYT" default="dist">
  <property name="src.dir" value="src"/>
  <property name="base.dir" value="war/WEB-INF"/>
  <property name="build.dir" value="${base.dir}/classes"/>  
  
  <target name="dist">
    <javac deprecation="off" debug="on" srcdir="${src.dir}" destdir="${build.dir}" listfiles="no" failonerror="true" >
      <classpath>
	<pathelement path="${base.dir}/lib" />
	<fileset dir="${base.dir}/lib">
	  <include name="*.jar" />
	</fileset>
      </classpath>        
    </javac>
  </target>

</project>